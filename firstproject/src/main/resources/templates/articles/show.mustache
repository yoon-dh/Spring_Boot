{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
        {{#article}}
        <tr>
            <th scope="row">{{id}}</th>
            <td colspan="2">{{title}}</td>
            <td>{{content}}</td>
        </tr>
        {{/article}}
    </tbody>
</table>
<a href="/articles/{{id}}/edit" class="btn btn-warning">EDIT</a>
<a href="/articles/{{id}}/delete" class="btn btn-danger">DELETE</a>
<a href="/articles">Go to Article List</a>
{{>layouts/footer}}